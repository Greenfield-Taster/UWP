                        <ColorAnimationUsingKeyFrames Storyboard.TargetName="RFill" Storyboard.TargetProperty="(SolidColorBrush.Color)" Duration="0:0:4" RepeatBehavior="Forever">
                                                 <DiscreteColorKeyFrame KeyTime="0:0:0" Value="Red"/>
                                                 <LinearColorKeyFrame KeyTime="0:0:2" Value="White"/>
                            <EasingColorKeyFrame KeyTime="0:0:4" Value="blue">
                                <EasingColorKeyFrame.EasingFunction>
                                    <PowerEase EasingMode="EaseOut"/>
                                </EasingColorKeyFrame.EasingFunction>                                
                            </EasingColorKeyFrame>
                        </ColorAnimationUsingKeyFrames>
                    </Storyboard>
                </BeginStoryboard>
            </EventTrigger>
        </Grid.Triggers>
        <Rectangle x:Name="R">
            <Rectangle.Fill>
                <SolidColorBrush Color="red" x:Name="RFill"/>
            </Rectangle.Fill>
            <Rectangle.RenderTransform>
                <ScaleTransform ScaleX="1" ScaleY="1"/>
            </Rectangle.RenderTransform>
        </Rectangle>
    </Grid>
    
